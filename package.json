{
  "name": "vighnesh153-turbo",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "lint-staged": "lint-staged",
    "pkg-update:root": "ncu -u",
    "pkg-update:nodejs-tools": "ncu -u --cwd=./nodejs-tools/ --ws --root",
    "pkg-update": "run-s pkg-update:*",
    "clean:root": "rimraf package-lock.json node_modules dist .turbo",
    "clean:nodejs-tools": "cd nodejs-tools && npm exec --include-workspace-root --workspaces -- rimraf package-lock.json node_modules dist .turbo",
    "clean": "run-s clean:*",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.5",
    "@commitlint/config-conventional": "^17.6.5",
    "eslint": "^8.42.0",
    "husky": "^8.0.3",
    "lint-staged": "13.2.2",
    "npm-check-updates": "^16.10.12",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.1"
  }
}
