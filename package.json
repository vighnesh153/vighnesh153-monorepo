{
  "name": "vighnesh153-turbo",
  "version": "0.0.0",
  "private": true,
  "prettier": "@vighnesh153/prettier-config",
  "type": "module",
  "workspaces": [
    "apps/*",
    "aws-serverless-tools/*",
    "cloudflare-tools/*",
    "docker-tools/*",
    "packages/*",
    "templates/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "aws:sls:deploy:prod": "turbo run sls:deploy:prod --filter=./aws-serverless-tools/*",
    "build:packages": "turbo run build --filter=./packages/*",
    "cloudflare:workers:deploy:prod": "turbo run cloudflare:workers:deploy:prod --filter=./cloudflare-tools/*",
    "dev": "turbo run dev --parallel --no-cache",
    "dev:apps:vighnesh153.com": "npm run dev -- --filter=vighnesh153.com",
    "dev:apps:playground": "npm run dev -- --filter=@vighnesh153/playground",
    "test": "turbo run test",
    "test:packages": "turbo run test --filter=./packages/*",
    "lint": "turbo run lint",
    "lint:packages": "turbo run lint --filter=./packages/*",
    "lint-staged": "lint-staged",
    "pkg-update:root": "ncu -u",
    "pkg-update:workspaces": "ncu -u -ws",
    "pkg-update": "npm-run-all pkg-update:*",
    "clean:root": "rimraf package-lock.json && rimraf node_modules dist .turbo",
    "clean:workspaces": "npm exec --workspaces -- rimraf node_modules dist .turbo",
    "clean": "npm-run-all clean:*",
    "prepare": "husky install",
    "changeStarToSpecificVersion": "node changeStarToSpecificVersion.js"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.1",
    "@commitlint/config-conventional": "^17.6.1",
    "@vighnesh153/prettier-config": "*",
    "@vighnesh153/tsconfig": "*",
    "dotenv-cli": "^7.2.1",
    "eslint-config-vighnesh153": "*",
    "husky": "^8.0.3",
    "lint-staged": "13.2.2",
    "npm-check-updates": "^16.10.9",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.0",
    "turbo": "*"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "npm@9.5.0"
}
