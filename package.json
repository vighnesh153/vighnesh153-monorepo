{
  "name": "vighnesh153-turbo",
  "version": "0.0.0",
  "private": true,
  "prettier": "@vighnesh153/prettier-config",
  "workspaces": [
    "apps/*",
    "aws-serverless-tools/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:packages": "turbo run build --filter=./packages/*",
    "dev": "turbo run dev --parallel",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "lint-staged": "lint-staged",
    "pkg-update:root": "ncu -u",
    "pkg-update:workspaces": "ncu -u -ws",
    "pkg-update": "npm-run-all pkg-update:*",
    "clean:root": "rimraf package-lock.json && rimraf node_modules",
    "clean:workspaces": "npm exec --workspaces -- rimraf node_modules",
    "clean": "npm-run-all clean:*",
    "prepare": "husky install",
    "version-update": "node ./version-update.js",
    "overrideConfigWhilePublishing": "node ./overrideConfigWhilePublishing.js",
    "removePrivatePackagesBeforePublishing": "node ./removePrivatePackagesBeforePublishing.js"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.2",
    "@commitlint/config-conventional": "^17.4.2",
    "@vighnesh153/prettier-config": "^1.0.3",
    "@vighnesh153/tsconfig": "*",
    "eslint-config-vighnesh153": "*",
    "husky": "^8.0.3",
    "lint-staged": "13.1.0",
    "npm-check-updates": "^16.6.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.3",
    "rimraf": "^4.1.2",
    "semantic-release": "^20.1.0",
    "turbo": "*"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
