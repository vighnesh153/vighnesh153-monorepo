{
  "name": "@vighnesh153/utils",
  "version": "0.4.1-alpha-01",
  "license": "MIT",
  "private": false,
  "description": "A utils package that I use internally in my projects",
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "exports": {
    "import": "./dist/main.js",
    "require": "./dist/main.cjs"
  },
  "types": "./dist/src/index.d.ts",
  "author": {
    "name": "Vighnesh Raut",
    "email": "me@vighnesh153.com",
    "url": "https://vighnesh153.com"
  },
  "scripts": {
    "build:once:bundle": "tsup",
    "build:once:types": "tsc",
    "build:watch:bundle": "tsup --watch",
    "build:watch:types": "tsc --watch",
    "build": "npm-run-all build:once:*",
    "dev": "npm-run-all --parallel build:watch:*",
    "test:watch": "vitest",
    "test": "vitest run --passWithNoTests"
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@types/node": "^18.15.11",
    "@vighnesh153/tsconfig": "*",
    "@vighnesh153/types": "*",
    "eslint-config-vighnesh153": "*",
    "npm-run-all": "^4.1.5",
    "ts-essentials": "^9.3.1",
    "tsup": "^6.7.0",
    "typescript": "^5.0.3",
    "vitest": "^0.29.8"
  }
}
