{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": [
        "test",
        "^build"
      ],
      "env": [
        "GOOGLE_CLIENT_ID",
        "GOOGLE_CLIENT_SECRET",
        "MONGODB_URI",
        "NEXTAUTH_SECRET",
        "NEXTAUTH_URL",
        "VERCEL_URL",
        "NODE_ENV"
      ],
      "outputs": [
        "dist/**",
        ".next/**"
      ]
    },
    "test": {
      "inputs": [
        "src/**/*.tsx",
        "src/**/*.ts",
        "test/**/*.ts"
      ],
      "outputs": [],
      "dependsOn": [
        "^build",
        "^test"
      ]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "sls:deploy:prod": {
    }
  }
}
