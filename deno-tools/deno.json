{
    "workspace": {
        "members": [
            "./deno-deploy-tools/deno-api-proxy"
        ]
    },
    "tasks": {
        "deploy:playground": "deployctl deploy --project=vighnesh153-playground --entrypoint=playground.ts",
        "ok": "deno lint && deno fmt --check && deno test --allow-none"
    },
    "imports": {
        "@std/assert": "jsr:@std/assert@1"
    },
    "lint": {
        "rules": {
            "tags": [
                "recommended"
            ]
        }
    },
    "fmt": {
        "useTabs": false,
        "lineWidth": 120,
        "indentWidth": 4,
        "semiColons": true,
        "singleQuote": true,
        "proseWrap": "always"
    },
    "nodeModulesDir": true
}
