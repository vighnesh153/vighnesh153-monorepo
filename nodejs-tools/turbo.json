{
  "$schema": "https://turborepo.org/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["test", "^build"],
      "env": [],
      "outputs": ["dist/**", ".next/**"]
    },
    "test": {
      "inputs": ["src/**/*.tsx", "src/**/*.ts", "test/**/*.ts"],
      "outputs": [],
      "dependsOn": ["^build", "^test"]
    },
    "lint": {
      "outputs": [],
      "dependsOn": ["^build"]
    },
    "dev": {
      "dependsOn": ["^dev"],
      "cache": false,
      "persistent": true
    },
    "deploy:prod": {},
    "sst:deploy:prod:local": {
      "cache": false
    }
  }
}
