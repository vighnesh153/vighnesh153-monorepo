{
  "name": "@vighnesh153/react-ui",
  "description": "React components for different platforms",
  "version": "0.4.5-alpha04",
  "type": "module",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "import": "./dist/main.js",
      "require": "./dist/main.cjs"
    },
    "./sideEffects": {
      "import": "./dist/sideEffects.js",
      "require": "./dist/sideEffects.cjs"
    }
  },
  "types": "./dist/src/index.d.ts",
  "license": "MIT",
  "scripts": {
    "lint": "eslint --max-warnings=0 .",
    "build:once:bundle": "tsup",
    "build:once:types": "tsc",
    "build:watch:bundle": "tsup --watch",
    "build:watch:types": "tsc --watch",
    "build": "run-p build:once:*",
    "dev": "run-p build:watch:*"
  },
  "peerDependencies": {
    "react": "^18.2.0"
  },
  "devDependencies": {
    "@types/node": "*",
    "@types/react": "^18.2.14",
    "@types/react-dom": "^18.2.6",
    "@vighnesh153/tsconfig": "*",
    "@vighnesh153/types": "*",
    "eslint-config-vighnesh153": "*",
    "npm-run-all": "^4.1.5",
    "tsup": "^7.1.0",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@fontsource/roboto": "^5.0.3",
    "@mui/icons-material": "^5.11.16",
    "@mui/lab": "^5.0.0-alpha.134",
    "@mui/material": "^5.13.6",
    "@mui/utils": "^5.13.6",
    "clsx": "^1.2.1",
    "react-icons": "^4.10.1"
  }
}
