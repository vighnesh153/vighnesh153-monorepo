{
  "name": "@vighnesh153/tv-remote-via-adb",
  "version": "0.4.7",
  "private": false,
  "type": "module",
  "description": "Simple adb-based remote to interact with your TV",
  "bin": "./dist/cli.js",
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "scripts": {
    "dev": "npm-run-all --parallel dev:*",
    "dev:backend": "tsup --watch",
    "dev:frontend": "vite",
    "lint": "eslint --max-warnings=0 .",
    "copy": "mkdir ./dist/client && mv ./src/client/dist/* ./dist/client",
    "build:frontend": "vite build",
    "build": "rimraf dist && tsup && vite build && npm run copy"
  },
  "files": [
    "dist"
  ],
  "author": {
    "name": "Vighnesh Raut",
    "email": "me@vighnesh153.dev",
    "url": "https://vighnesh153.dev"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "express": "^4.21.1",
    "ip": "^2.0.1",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@fontsource/roboto": "^5.1.0",
    "@mui/icons-material": "^6.1.3",
    "@mui/lab": "^6.0.0-beta.11",
    "@mui/material": "^6.1.3",
    "@mui/utils": "^6.1.3",
    "@types/express": "^5.0.0",
    "@types/ip": "^1.1.3",
    "@types/morgan": "^1.9.9",
    "@types/node": "*",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.0",
    "@vighnesh153/fake-data": "*",
    "@vighnesh153/react-hooks": "^0.4.7",
    "@vighnesh153/tools": "npm:@jsr/vighnesh153__tools@^0.1.0",
    "@vighnesh153/tsconfig": "*",
    "@vitejs/plugin-react": "^4.3.2",
    "eslint-config-vighnesh153": "*",
    "npm-run-all": "^4.1.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-icons": "^5.3.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.6.3",
    "uuid": "^10.0.0",
    "vite": "^5.4.8"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:vighnesh153/vighnesh153-monorepo.git"
  },
  "keywords": [
    "remote",
    "google",
    "android",
    "google-tv",
    "tv",
    "adb",
    "android-tv"
  ]
}
