{
  "name": "@vighnesh153/github-gist",
  "version": "0.4.5-alpha04",
  "description": "A simple promise-based wrapper over the GitHub's REST API to play with GitHub Gists.",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "exports": {
    "import": "./dist/main.js",
    "require": "./dist/main.cjs"
  },
  "types": "./dist/src/index.d.ts",
  "author": {
    "name": "Vighnesh Raut",
    "url": "https://vighnesh153.com",
    "email": "me@vighnesh153.com"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:vighnesh153/vighnesh153-monorepo.git"
  },
  "scripts": {
    "build:once:bundle": "tsup",
    "build:once:types": "tsc",
    "build:watch:bundle": "tsup --watch",
    "build:watch:types": "tsc --watch",
    "build": "npm-run-all build:once:*",
    "lint": "eslint --max-warnings=0 .",
    "dev": "npm-run-all --parallel build:watch:*",
    "test:watch": "vitest",
    "test": "vitest run --passWithNoTests"
  },
  "files": [
    "dist/**/*",
    "README.md"
  ],
  "keywords": [
    "gist",
    "storage",
    "gist db",
    "database",
    "github",
    "github gist",
    "gist github"
  ],
  "peerDependencies": {
    "axios": "^1.0.0"
  },
  "devDependencies": {
    "@types/node": "*",
    "@vighnesh153/fake-data": "*",
    "@vighnesh153/tsconfig": "*",
    "@vighnesh153/types": "*",
    "axios": "^1.4.0",
    "eslint-config-vighnesh153": "*",
    "npm-run-all": "^4.1.5",
    "tsup": "^7.1.0",
    "typescript": "^5.1.6",
    "vitest": "^0.34.1"
  },
  "dependencies": {
    "@vighnesh153/utils": "*"
  }
}
