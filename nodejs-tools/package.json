{
  "name": "vighnesh153-monorepo-nodejs",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "nodejs-apps/*",
    "nodejs-aws-serverless-tools/*",
    "nodejs-lib/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:google3": "turbo run build:google3",
