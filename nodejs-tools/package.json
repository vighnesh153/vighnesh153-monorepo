{
  "name": "vighnesh153-turbo-nodejs",
  "version": "0.0.0",
  "private": true,
  "prettier": "@vighnesh153/prettier-config",
  "type": "module",
  "workspaces": [
    "nodejs-apps/*",
    "nodejs-aws-serverless-tools/*",
    "nodejs-cloudflare-tools/*",
    "nodejs-docker-tools/*",
    "nodejs-packages/*",
    "nodejs-templates/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "aws:sls:deploy:prod": "turbo run sls:deploy:prod --filter=./aws-serverless-tools/*",
    "build:packages": "turbo run build --filter=./packages/*",
    "cloudflare:workers:deploy:prod": "turbo run cloudflare:workers:deploy:prod --filter=./cloudflare-tools/*",
    "dev": "turbo run dev --parallel --no-cache",
    "test": "turbo run test",
    "test:packages": "turbo run test --filter=./packages/*",
    "lint": "turbo run lint",
    "lint:packages": "turbo run lint --filter=./packages/*",
    "changeStarToSpecificVersion": "node changeStarToSpecificVersion.js"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.5",
    "@commitlint/config-conventional": "^17.6.5",
    "@vighnesh153/prettier-config": "*",
    "@vighnesh153/tsconfig": "*",
    "dotenv-cli": "^7.2.1",
    "eslint-config-vighnesh153": "*",
    "lint-staged": "13.2.2",
    "npm-check-updates": "^16.10.12",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.1",
    "turbo": "*"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "npm@9.5.0"
}
