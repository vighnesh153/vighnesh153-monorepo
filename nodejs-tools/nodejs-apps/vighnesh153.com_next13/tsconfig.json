{
  "extends": "@vighnesh153/tsconfig/nextjs.json",
  "include": ["next-env.d.ts", "src/**/*.ts", "src/**/*.tsx", "vitest.config.ts", ".next/types/**/*.ts"],
  "exclude": ["dist", "build", "node_modules"],
