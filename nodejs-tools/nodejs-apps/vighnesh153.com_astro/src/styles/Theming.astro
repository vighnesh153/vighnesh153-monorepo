---
import '../styles/reset.css';
import '../styles/normalize.css';
---

<style is:global>
  :root {
    /* Default to theme 1 values */
    --text: #fbe2fd;
    --background: #0a182e;
    --primary: #9074dc;
    --secondary: #000000;
    --accent: #66ffdb;

    /* z-index constants */
    --z-index-mobile-stepper: 1000;
    --z-index-fab: 1050;
    --z-index-speed-dial: 1050;
    --z-index-app-bar: 1100;
    --z-index-drawer: 1200;
    --z-index-modal: 1300;
    --z-index-snackbar: 1400;
    --z-index-tooltip: 1500;

    /* breakpoint constants */
    --breakpoint-xs: 0px;
    --breakpoint-sm: 600px;
    --breakpoint-md: 900px;
    --breakpoint-lg: 1200px;
    --breakpoint-xl: 1536px;
  }

  @custom-media --xs (width >= var(--breakpoint-xs) and width < var(--breakpoint-sm));
  @custom-media --xs-up (width >= var(--breakpoint-xs));
  @custom-media --sm (width >= var(--breakpoint-sm) and width < var(--breakpoint-md));
  @custom-media --sm-up (width >= var(--breakpoint-sm));
  @custom-media --md (width >= var(--breakpoint-md) and width < var(--breakpoint-lg));
  @custom-media --md-up (width >= var(--breakpoint-md));
  @custom-media --lg (width >= var(--breakpoint-lg) and width < var(--breakpoint-xl));
  @custom-media --lg-up (width >= var(--breakpoint-lg));
  @custom-media --xl (width >= var(--breakpoint-xl));

  html:has(.theme-1) {
    /* https://realtimecolors.com/?colors=fbe2fd-0a182e-9074dc-000000-66ffdb */
    --text: #fbe2fd;
    --background: #0a182e;
    --primary: #9074dc;
    --secondary: #000000;
    --accent: #66ffdb;
  }

  html:has(.theme-2) {
    /* https://realtimecolors.com/?colors=fbe2fd-0a182e-8f4ca9-023350-66ffdb */
    --text: #fbe2fd;
    --background: #0a182e;
    --primary: #8f4ca9;
    --secondary: #023350;
    --accent: #66ffdb;
  }

  html {
    font-family: system-ui, sans-serif;
    background-color: var(--background);
    color: var(--text);
  }
</style>

<script>
  const theme = localStorage.getItem('theme');
  if (theme) {
    document.body.classList.add(theme);
  }
</script>
