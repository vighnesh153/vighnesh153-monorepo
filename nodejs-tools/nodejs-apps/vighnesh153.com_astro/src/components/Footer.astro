---
import Link from './Link.astro';
import SocialLinks from './SocialLinks.astro';

import { hashTags, externalLinks } from '@/constants';
---

<footer id={hashTags.footer}>
  <SocialLinks direction="horizontal" class="social-links" />
  <Link href={externalLinks.githubRepo} color="secondary">Source code</Link> of this website
</footer>

<style lang="scss">
  @import '@/styles/breakpoints-media.css';
  // @import '@/styles/typography.scss';

  footer {
    padding-block: 3rem !important;

    display: grid;
    place-items: center;
  }

  .social-links {
    display: flex;
    margin-bottom: 1rem;

    @media (--sm-and-up) {
      display: none;
    }
  }
</style>
