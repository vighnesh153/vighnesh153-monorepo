---
import type { HTMLAttributes } from 'astro/types';

import BaseTypography, { type TypographyVariant } from './base-typography.astro';

export interface Props extends HTMLAttributes<'h6'> {
  variant?: TypographyVariant;
}

const { variant = 'h6', ...props } = Astro.props;
---

<BaseTypography element="h6" variant={variant} htmlProps={props}>
  <slot />
</BaseTypography>
