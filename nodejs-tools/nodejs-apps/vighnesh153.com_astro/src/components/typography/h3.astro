---
import type { HTMLAttributes } from 'astro/types';

import BaseTypography, { type TypographyVariant } from './base-typography.astro';

export interface Props extends HTMLAttributes<'h3'> {
  variant?: TypographyVariant;
}

const { variant = 'h3', ...props } = Astro.props;
---

<BaseTypography element="h3" variant={variant} htmlProps={props}>
  <slot />
</BaseTypography>
