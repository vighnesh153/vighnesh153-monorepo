---
import type { HTMLAttributes } from 'astro/types';

import BaseTypography, { type TypographyVariant } from './base-typography.astro';

export interface Props extends HTMLAttributes<'p'> {
  variant?: TypographyVariant;
}

const { variant = 'body1', ...props } = Astro.props;
---

<BaseTypography element="p" variant={variant} htmlProps={props}>
  <slot />
</BaseTypography>
