---
import type { HTMLAttributes } from 'astro/types';

import BaseTypography, { type TypographyVariant } from './base-typography.astro';

export interface Props extends HTMLAttributes<'span'> {
  variant?: TypographyVariant;
}

const { variant = 'body2', ...props } = Astro.props;
---

<BaseTypography element="span" variant={variant} htmlProps={props}>
  <slot />
</BaseTypography>
