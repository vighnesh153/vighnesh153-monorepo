---
import type { HTMLAttributes } from 'astro/types';

import BaseTypography, { type TypographyVariant } from './base-typography.astro';

export interface Props extends HTMLAttributes<'h1'> {
  variant?: TypographyVariant;
}

const { variant = 'h1', ...props } = Astro.props;
---

<BaseTypography element="h1" variant={variant} htmlProps={props}>
  <slot />
</BaseTypography>
