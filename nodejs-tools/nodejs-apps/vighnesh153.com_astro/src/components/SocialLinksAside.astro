---
import SocialLinks from './SocialLinks.astro';
---

<div class="aside-social-links">
  <SocialLinks direction="vertical" />
</div>

<style lang="scss">
  @import '@/styles/breakpoints-media.css';

  .aside-social-links {
    $gap: 1.5rem;

    position: fixed;
    bottom: 0;
    left: $gap;
    right: auto;

    display: none;

    &::after {
      content: '';
      width: 1px;
      height: 90px;
      margin: $gap auto 0;

      display: block;

      background-color: var(--text);
    }

    @media (--sm-and-up) {
      display: block;
    }
  }
</style>
