---
import type { HTMLAttributes } from 'astro/types';

export interface Props extends HTMLAttributes<'div'> {}

const { class: className, 'class:list': classList, ...props } = Astro.props;
---

<div class:list={['dashed-outline-on-focus', className, classList]} {...props}>
  <slot />
</div>

<style is:global>
  .dashed-outline-on-focus :is(a, button, input, select, textarea):focus-visible {
    outline-width: 3px;
    outline-style: dashed;
    outline-color: var(--focus-dashed-outline-color, currentColor);
    outline-offset: 0.5rem;
  }
</style>
