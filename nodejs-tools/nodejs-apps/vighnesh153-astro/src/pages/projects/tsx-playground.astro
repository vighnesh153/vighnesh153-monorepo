---
import { classes } from '@/utils';
import { externalLinks, projectNavItems } from '@/constants';
import ContentLayout from '@/layouts/ContentLayout.astro';
import Link from '@/components/Link.svelte';
import TsxRoot from '@/components/projects/tsx-playground/Root.svelte';

const title = 'Vighnesh Raut | Project - TSX Playground';
const description = `A in-browser transpiler and bundler for React.js and Typescript`;
---

<ContentLayout title={title} description={description} navItems={projectNavItems} showFooter={false}>
  <div class={classes(`mt-32 mb-12 mx-auto scroll-mt-8`)}>
    <h1 class="text-3xl text-center">Typescript & React Playground</h1>
    <p class="mt-2 text-center">Made with ❤️ by Vighnesh Raut</p>
    <p class="mt-2 text-center">
      Checkout the source code on <Link href={externalLinks.projects.tsxBundler.sourceCode}>Github</Link>
    </p>
    <TsxRoot client:only="svelte" />
  </div>
</ContentLayout>
