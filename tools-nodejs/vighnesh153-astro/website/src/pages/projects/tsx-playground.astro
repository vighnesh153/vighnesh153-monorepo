---
import { classes, externalLinks, projectNavItems } from "@/utils/index.ts";
import ContentLayout from "@/layouts/ContentLayout.astro";
import { Link } from "@/components/Link.tsx";
import { TsxPlaygroundRoot } from "@/components/projects/tsx-playground/TsxPlaygroundRoot.tsx";

const title = "Vighnesh Raut | Project - TSX Playground";
const description = `A in-browser transpiler and bundler for React.js and Typescript`;
---

<ContentLayout
  title={title}
  description={description}
  navItems={projectNavItems}
>
  <div class={classes(`mt-32 mb-12 mx-auto scroll-mt-8`)}>
    <h1 class="text-3xl text-center">Typescript & React Playground</h1>
    <p class="mt-2 text-center">Made with ❤️ by Vighnesh Raut</p>
    <p class="mt-2 text-center">
      Checkout the source code on <Link
        href={externalLinks.projects.tsxBundler.sourceCode}
        id="githubLink">Github</Link
      >
    </p>
    <TsxPlaygroundRoot client:only="solid" />
  </div>
</ContentLayout>

<script>
  import { logAnalyticsEvent } from "@/utils/firebase_config.ts";

  logAnalyticsEvent("visit_project", {
    projectTitle: "tsx playground",
  });

  document.getElementById("githubLink")?.addEventListener("click", () => {
    logAnalyticsEvent("visit_source_code", {
      project: "tsx playground",
    });
  });
</script>
